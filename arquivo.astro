---
import { getCollection } from 'astro:content';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { defaultLang } from '../i18n';
const posts = (await getCollection('posts')).filter(p => !p.data.draft);
---
<html lang={defaultLang}>
  <head><meta charset="utf-8"/></head>
  <body class="bg-white dark:bg-neutral-950 text-neutral-900 dark:text-neutral-100">
    <Header lang={defaultLang} />
    <main class="mx-auto max-w-3xl px-4 py-8 prose dark:prose-invert">
      <h1>Arquivo</h1>
      <ul>
        {posts.map(p => (<li><a href={p.url}>{p.data.title}</a> â€” {new Date(p.data.pubDate).toLocaleDateString(p.data.lang)}</li>))}
      </ul>
    </main>
    <Footer />
  </body>
</html>

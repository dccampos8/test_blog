---
import { languages, ui, defaultLang } from '../i18n';
import LanguageSwitch from './LanguageSwitch.astro';
import ThemeToggle from './ThemeToggle.astro';
import Search from './Search.astro';
const { lang = defaultLang } = Astro.props;
---
<header class="border-b border-neutral-200 dark:border-neutral-800">
  <div class="mx-auto max-w-5xl px-4 py-4 flex items-center gap-4">
    <a href="/" class="text-2xl font-extrabold tracking-tight text-primary">Conversa de Tasca</a>
    <span class="text-sm text-neutral-500">{ui[lang].tagline}</span>
    <div class="ml-auto flex items-center gap-2">
      <a href={`/${lang}/arquivo`} class="text-sm hover:underline">{ui[lang].nav.archive}</a>
      <a href={`/${lang}/sobre`} class="text-sm hover:underline">{ui[lang].nav.about}</a>
      <a href={`/${lang}/contacto`} class="text-sm hover:underline">{ui[lang].nav.contact}</a>
      <Search lang={lang} />
      <LanguageSwitch lang={lang} />
      <ThemeToggle />
    </div>
  </div>
</header>
